{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "stripInternal": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "outDir": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "es6",
    "lib",
    "umd",
    "example",
    "src/__tests__",
    "src/__fixtures__"
  ]
}