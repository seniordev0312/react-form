{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "compiled",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es5",
    "types": [
      "react",
      "react-native",
      "jest",
      "prop-types",
      "enzyme",
      "enzyme-adapter-react-16",
      "lodash.clonedeep",
      "lodash.isequal",
      "lodash.topath",
      "warning",
      "react-test-renderer"
    ]
  },
  "include": ["src", "./typings.d.ts"],
  "exclude": ["node_modules", "dist"]
}
